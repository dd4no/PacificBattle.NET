@* Dice Roller *@

<div class="text-center border">

    <h4>d @DiceSides</h4>
    <h5>Number of Dice: @NumberOfDice</h5>
    <button @onclick="RollDice">Roll Dice</button>

    <div class="m-auto pt-4 w-75 d-flex align-items-center justify-content-between">
        @foreach (var roll in diceRolls)
        {
            <div class="p-4 border"><b>@roll</b></div>
        }
    </div>

    <div class="text-center">
        <h4 class="text-center">Select Number Of Dice</h4>
        <InputSelect class=" w-25 m-auto" @bind-Value="numberOfDice">
            @foreach (var die in dice)
            {
                <option value="@die">@die</option>
            }
        </InputSelect>
    </div>

    <div class="text-center">
        <h4 class="text-center">Select Number Of Sides</h4>
        <InputSelect class=" w-25 m-auto" @bind-Value="numberOfSides">
            @foreach (var side in sides)
            {
                <option value="@side">@side</option>
            }
        </InputSelect>
    </div>

</div>

@code 
{
    private int numberOfDice = 1;
    private int numberOfSides = 6;
    private List<int> dice = new List<int> { 1, 2, 3, 4, 5, 6 };
    private List<int> sides = new List<int> { 4, 6, 8, 10, 12, 20 };

    [Parameter]
    public int NumberOfDice { get; set; } = 1;
    [Parameter]
    public int DiceSides { get; set; } = 6;

    private List<int> diceRolls = new();

    private static readonly Random random = new Random();    

    public void RollDice()
    {
        diceRolls.Clear();
        
        for (int i = 0; i < NumberOfDice; i++)
        {
             diceRolls.Add(random.Next(1, DiceSides + 1));
        }
    }
}
