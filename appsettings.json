{
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": "true",
          "outputTemplate": "{Timestamp: yyyy-MM-dd HH:mm:ss} [{Level:u3}] -- {Message}{NewLine}{Exception}"
        }
      }
    ]
  },

  "AllowedHosts": "*"
}
